<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default login-panel">
      <div class="panel-heading">
        <h3 class="panel-title">Log In to SniffHub</h3>
      </div>

      <div class="panel-body">
        <% if !@user.errors[:base].empty? %>
          <div class="alert alert-danger" role="alert"><%= @user.errors[:base].join(' ') %></div>
        <% end %>

        <form action="/sessions" method="post">
          <div class="form-group">
            <label for="user-email">Email</label>
            <input type="email" class="form-control" id="user-email" name="user[email]" placeholder="" value="<%= params.fetch(:user, {})[:email] %>" />
          </div>

          <div class="form-group">
            <label for="user-password">Password</label>
            <input type="password" class="form-control" id="user-password" name="user[password]" placeholder="" value="<%= params.fetch(:user, {})[:password] %>" />
          </div>

          <%= form_authenticity_tag %>

          <button type="submit" class="btn btn-default">Log In</button>
        </form>
      </div>
    </div>
  </div>
</div>
