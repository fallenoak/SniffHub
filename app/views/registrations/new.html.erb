<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default registration-panel">
      <div class="panel-heading">
        <h3 class="panel-title">Register for SniffHub</h3>
      </div>

      <div class="panel-body">
        <% if !@user.errors[:base].empty? %>
          <div class="alert alert-danger" role="alert"><%= @user.errors[:base].join(' ') %></div>
        <% end %>

        <form action="/registrations" method="post">
          <div class="form-group">
            <label for="user-email">Email *</label>
            <input type="email" class="form-control" id="user-email" name="user[email]" placeholder="" value="<%= @user.email %>" />
          </div>

          <div class="form-group">
            <label for="user-password">Display Name *</label>
            <input type="text" class="form-control" id="user-name" name="user[name]" placeholder="" value="<%= @user.name %>" />
          </div>

          <div class="form-group">
            <label for="user-password">Password *</label>
            <input type="password" class="form-control" id="user-password" name="user[password]" placeholder="" value="<%= @user.password %>" />
          </div>

          <div class="form-group">
            <label for="user-password">Confirm Password *</label>
            <input type="password" class="form-control" id="user-password-confirmation" name="user[password_confirmation]" placeholder="" value="<%= @user.password_confirmation %>" />
          </div>

          <%= form_authenticity_tag %>

          <button type="submit" class="btn btn-default">Register</button>
        </form>
      </div>
    </div>
  </div>
</div>
